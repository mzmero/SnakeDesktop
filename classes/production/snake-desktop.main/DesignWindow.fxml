<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="grid" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="1000.0" style="-fx-background-color: #90ee90;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="-Infinity" percentHeight="90.0" prefHeight="450.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="-Infinity" percentHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
  </rowConstraints>
  <children>
      <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label text="Insert" />
                  <TextField fx:id="InsertQuestionBody" promptText="question body" />
                  <ComboBox fx:id="CoInsertteams" prefWidth="150.0" promptText="team" />
                  <ComboBox fx:id="CoInsertlevel" prefWidth="150.0" promptText="level" />
                  <TextField fx:id="InsertAnswer1" promptText="answer 1" />
                  <TextField fx:id="InsertAnswer2" promptText="answer 2" />
                  <TextField fx:id="InsertAnswer3" promptText="answer 3" />
                  <TextField fx:id="InsertAnswer4" promptText="answer 4" />
                  <ComboBox fx:id="CoInsertCorrectAnswer" prefWidth="150.0" promptText="correct answer" />
                  <Button fx:id="btnInsert" mnemonicParsing="false" onMouseClicked="#InsertQ" text="insert" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label text="Update" />
                  <ComboBox fx:id="ComboChooseQuestion" prefWidth="150.0" promptText="choose question" />
                  <TextField fx:id="UpdateQuestionBody" promptText="question body" />
                  <ComboBox fx:id="ComboUpdateTeam" prefWidth="150.0" promptText="team" />
                  <ComboBox fx:id="ComboUpdateLevel" prefWidth="150.0" promptText="level" />
                  <TextField fx:id="UpdateAnswer1" promptText="answer 1" />
                  <TextField fx:id="UpdateAnswer2" promptText="answer 2" />
                  <TextField fx:id="UpdateAnswer3" promptText="answer 3" />
                  <TextField fx:id="UpdateAnswer4" promptText="answer 4" />
                  <ComboBox fx:id="ComboUpdateCorrectAns" prefWidth="150.0" promptText="correct answer" />
                  <Button fx:id="btnUpdate" mnemonicParsing="false" onMouseClicked="#UpdateQ" text="update" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label text="Delete" />
                  <ComboBox fx:id="ComboDelete" prefWidth="150.0" promptText="question body" />
                  <TextArea fx:id="QuestionBody" prefHeight="200.0" prefWidth="200.0" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onMouseClicked="#DeleteQ" text="delete" />
               </children>
            </VBox>
         </children>
      </HBox>
    <GridPane style="-fx-background-color: #68ad68;" GridPane.rowIndex="1">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" percentWidth="50.0" prefWidth="500.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" percentWidth="50.0" prefWidth="500.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="-Infinity" percentHeight="100.0" prefHeight="50.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
          <children>
            <Button maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#cancel" prefHeight="25.0" prefWidth="150.0" styleClass="button-small" text="%menu.back" textFill="#cd1010">
              <HBox.margin>
                <Insets />
              </HBox.margin>
            </Button>
          </children>
          <GridPane.margin>
            <Insets left="35.0" />
          </GridPane.margin>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
          <children>
            <ToggleButton fx:id="terrain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" styleClass="button-small" text="%design.terrain">
              <HBox.margin>
                <Insets right="10.0" />
              </HBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="snake" layoutX="350.0" layoutY="23.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" styleClass="button-small" text="%design.snake">
              <HBox.margin>
                <Insets right="10.0" />
              </HBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="background" layoutX="350.0" layoutY="23.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" styleClass="button-small" text="%design.background">
              <HBox.margin>
                <Insets right="10.0" />
              </HBox.margin>
            </ToggleButton>
          </children>
        </HBox>
      </children>
    </GridPane>
  </children>
</GridPane>
